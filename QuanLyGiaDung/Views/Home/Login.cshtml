@model QuanLyGiaDung.Models.TaiKhoan

@{
    ViewBag.Title = "Login";
    Layout = null;
}

    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <script src="https://kit.fontawesome.com/1f55df4c54.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Langar&display=swap" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        <style>
            body {
                display: flex;
                justify-content: center;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <div style="width: 100%; height: 100%;">
            <img src="~/images/bgLogin.png" style="position: absolute; height: 100%; width: 100%; z-index: -1" top: 0;  />
        </div>
        <div class="" style="z-index: 10; position: absolute">
            <div class="col-md-12" style="width: 500px;">
                <div class="card border">
                    <div class="card-header mt-4 bg-white" style="font-family: 'Langar', cursive; text-align:center; font-size: 30px;">
                        Login
                    </div>
                    <div class="card-body d-flex justify-content-center flex-column">
                        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group mt-4">
                                <i class="fas fa-envelope-square"></i>
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                            </div>
                            <div class="form-group mt-4">
                                <i class="fas fa-key"></i>

                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                            </div>
                            <div class="form-group mt-4">
                                <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                                <input type="button" class="btn btn-info" value="Register" onclick="location.href='@Url.Action("Register", "Home")'" />
                            </div>
                            <p>@ViewBag.error</p>
                      
                        }
                    </div>
                </div>
            </div>
        </div>
    </body>